{
  "name": "my-turborepo",
  "private": true,
  "files": [
    "libs/**/*"
  ],
  "exports": {
    ".": {
      "import": "./libs/luna-grid/dist/library.js",
      "require": "./libs/luna-grid/dist/library.umd.cjs"
    }
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "profile": "turbo profile --profile --force && turbo profile --graph"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}